
.container{width:100%;height:100%;padding:0;margin:0 auto;background: #fff;}
.container .tc-page-head{padding:0 15px;font-size: 14px;color: #fff;background: #82d4ff;line-height: 36px;margin-bottom: 10px;}
.container .tc-m-auto{margin: 0 15px;}
.container .tc-panel-wrap{margin-bottom: 20px;border-radius: 4px;box-shadow: 0 1px 1px rgba(0,0,0,.05);}
.container .panel-heading{font-size: 16px;padding: 10px 15px;line-height: 10px;}
.container .panel-body{margin-top:20px;}
.container .form-group{margin-bottom: 20px;}
.container .label {display: inline-block;max-width: 100%;margin-bottom: 5px;font-weight: 700;}
.container .label text{padding-left:15px;font-weight: normal;}
.container .tc-g{width:100%;display: flex;justify-content: space-between;}
.container .tc-g input{height: 34px;padding: 3px 12px;font-size: 14px;color: #555;background-color: #fff;background-image: none;border: 1px solid #ccc;border-radius: 4px;-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);box-shadow: inset 0 1px 1px rgba(0,0,0,.075);flex:1;margin-right:10px;}
.container .tc-g textarea{height:100px;background: darkkhaki;padding:12px;}
.container .tc-code{background: coral;color: #fff;border-radius: 30px; line-height: 40px;font-size: 12px;padding:0 10px;}
.container .tc-imgcode{background: #ccc;width: 120px;height:42px;}
.container .hetong{font-size: 12px;height: 44px;line-height: 44px;background: #f0f0f0;padding: 0 15px;border-radius: 4px;color:#31708f;}
.container .ziliao{font-weight: 700;color: #666;}
.container .tc-info{font-size: 14px;color: #999;padding-bottom:20px;}
.container .tc-info text{color: darkred;padding: 0 15px;}
.container .tc-sub{margin-top: 20px;}

.dropdown {overflow:scroll;border:1px solid #bce8f1;height:0;opacity:0;box-sizing: border-box;z-index:-1;transition:all 400ms;}
.dropdown.show {height:350px;opacity:1;z-index:5;}

.verify {width: 100%;height: 42px;}

.canvas-container,.myCanvas {
  width: 100%;
}
.canvas-container {
  background-color : #fff;
  border-color : #faebcc;
  border-width : 1px;
  border-style : solid;
}
.myCanvas {
  height: 80px;
}
.container .panel-heading text {margin-left: 5px;}