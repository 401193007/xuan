<view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{errorMsg}}</view> 
<view class="container">
    <view class="tc-page-head">
        <text>入职申请</text>
    </view>
    <view class="tc-m-auto">
        <view class="tc-panel-wrap">
            <view class="panel-heading">
                <icon type="info" size="12" color="black"/>
                <text>基本信息</text>
            </view>
            <view class="panel-body">
                <form bindsubmit="formSubmit" bindreset="formReset">
                    <view class="fieldset">
                        <view class="form-group">
                            <view class="label">姓名</view>
                            <input class="form-control" placeholder="请输入姓名" name="name"/>
                        </view>
                        <view class="form-group">
                            <view class="label">手机号码</view>
                            <input class="form-control" placeholder="请输入手机号码" name="mobile" type="number"/>
                        </view>
                        <view class="form-group">
                            <view class="label">身份证号码</view>
                            <input class="form-control" placeholder="请输入身份证号码" name="id_number" type="idcard"/>
                        </view>
                    </view>
                    <view class="tc-submit-wrap">
                        <button formType="submit" class="tc-btn-primary">下一步</button>
                    </view>
                </form>
            </view>
        </view>
    </view>
</view>