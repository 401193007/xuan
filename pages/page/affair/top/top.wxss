.navbar {
  width: 100%;
  height: 50px;
  background-color: #595757;
}
.navbar-header {
  height: 100%;
  padding: 0 15px;
}
.nav-toggle {
  position : relative;
  margin-top:8px;
  padding: 9px 5px;
}
.nav-toggle .icon-bar {
  background-color : #fff;
  width : 22px;
  height : 2px;
  border-radius : 1px;
}
.nav-toggle .icon-bar:not(:first-child) {
  margin-top: 4px;
}
.navbar-default {
  position: absolute;
  width: 100%;
  /*display: none;*/
   display: block;
}
.navbar-default.show {
 
}

.sidebar-nav {
  opacity: 0;
  transition: .3s;
  transform: translateY(-50%);
  height: 0;
  z-index: 10;
}
.sidebar-nav.show {
  opacity: 1;
  transform: translateY(0);
  z-index: 10;
  height: auto;
}
.nav {
  background-color : #eee;
  position : relative;
  display : block;
  padding : 10px 15px;
  font-size: 12px;
  border-bottom:1px solid #f8f8f8;
}
.nav.active {
  background-color: #c8c8c8;
}
.nav.active .icon-arrow {
  display: none;
}
.nav text {
  color :#337ab7;
}
.nav .icon-arrow {
  width: 5px;
  height: 6px;
  position: absolute;
  right: 15px;
  top:50%;
  margin-top:-3px;
}

.dropdown-toggle {
  height: 100%;
  line-height: 44px;
  font-size:12px;
  color :#fff;
}
.dropdown-toggle text {
  margin-right: 10px;
  line-height: 50px;
}
.dropdown-toggle .icon-user {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.dropdown-menu {
  font-size: 12px;
  background-color: #fff;
  position: absolute;
  top:0;
  right: 15px;
  display: none;
}
.dropdown-menu.show {
  display: block;
}
.dropdown-menu .menu {
  padding: 15px 20px;
}
.dropdown-menu .menu:not(:last-child){
  border-bottom: 1px solid #e7e7e7;
}