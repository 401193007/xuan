/**index.wxss**/
.swiper-container {
  height: 200px;
}
.slide-image {
  width: 100%;
  height: 200px;
}
.page__desc {
  margin-left: 4%;
  line-height: 44px;
}
.nav-list {
  margin-top:10px;
}
.nav-item {
  box-sizing: border-box;
  display: block;
  width: 44%;
  background-color: #fff;
  padding: 15px 0 15px 5px;
  display: flex;
  box-shadow: 0 0 50px rgba(0,0,0,.05);
}
.nav-item:nth-child(2n) {
  margin: 0 4% 15px 2%;
}
.nav-item:nth-child(2n-1) {
  margin: 0 2% 15px 4%;
}
.text-wrap {
  margin-left: 5px;
  padding-top: 4px;
}
.title,.desc {
  display: block;
}
.title {
  font-size: 14px;
}
.desc {
  font-size: 12px;
  color:#999;
}
.icon {
  width: 48px;
  height: 48px;
}
.text-wrap {
  flex :1;
}
.iconfont {
  font-size: 36px;
  line-height: 1;
}
